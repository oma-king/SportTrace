<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>

<AnchorPane id="AnchorPane" fx:id="ContactUsAnchor" prefHeight="600.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="projet.gui.ContactUsController">
   <children>
      <Pane fx:id="ContactUsPane" layoutX="1.0" onMouseClicked="#ResetValues" prefHeight="600.0" prefWidth="298.0">
         <children>
            <Label alignment="CENTER" layoutX="90.0" layoutY="25.0" text="Adresse E-mail :" />
            <Label alignment="CENTER" layoutX="95.0" layoutY="92.0" text="Mot de passe :" />
            <Label layoutX="126.0" layoutY="180.0" text="Sujet :" />
            <Label layoutX="111.0" layoutY="245.0" text="Message : " />
            <PasswordField fx:id="tfPassword" layoutX="3.0" layoutY="117.0" prefHeight="26.0" prefWidth="292.0" promptText="Votre mot de passe" />
         </children>
      </Pane>
      <TextField fx:id="tfSender" layoutX="4.0" layoutY="54.0" prefHeight="26.0" prefWidth="292.0" promptText="Votre adresse email" />
      <TextField fx:id="tfSubject" layoutX="4.0" layoutY="209.0" prefHeight="26.0" prefWidth="292.0" promptText="Sujet" />
      <TextArea fx:id="tfMessage" layoutX="3.0" layoutY="273.0" prefHeight="170.0" prefWidth="292.0" promptText="Votre message" />
      <Button fx:id="btnSend" layoutX="2.0" layoutY="473.0" mnemonicParsing="false" onAction="#SendEmail" prefHeight="38.0" prefWidth="296.0" text="Envoyer" />
      <Button fx:id="btnClose" layoutX="2.0" layoutY="536.0" mnemonicParsing="false" onAction="#CloseContactUsTab" prefHeight="38.0" prefWidth="296.0" text="Fermer" />
   </children>
</AnchorPane>
