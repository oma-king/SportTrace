<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" prefHeight="550.0" prefWidth="950.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="projet.gui.HomePageDashboardController">
   <children>
      <Pane fx:id="backgroundPane" prefHeight="550.0" prefWidth="950.0" />
      <Pane fx:id="HomeBackgroundPane" layoutX="48.0" layoutY="25.0" prefHeight="500.0" prefWidth="850.0">
         <children>
            <Pane fx:id="logoPane" layoutX="350.0" layoutY="-23.0" prefHeight="150.0" prefWidth="150.0" />
            <ImageView fx:id="LogoHomeDashboard" fitHeight="150.0" fitWidth="200.0" layoutX="350.0" layoutY="-27.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../Graphics/Sporttrace_logo.png" />
               </image>
            </ImageView>
            <Button fx:id="Contactus" layoutX="437.0" layoutY="438.0" mnemonicParsing="false" onAction="#ContactUsTransition" text="Contactez nous">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font></Button>
            <Button fx:id="FacebookPage" layoutX="288.0" layoutY="438.0" mnemonicParsing="false" onAction="#FacebookTransition" text="Page Facebook">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font></Button>
            <Text fx:id="T1" fill="#000000" layoutX="35.0" layoutY="210.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Sport Trace est une application Gratuite qui offre des exercices de sport et des régimes personnalisés." textAlignment="CENTER" wrappingWidth="800" />
            <Text fx:id="T2" layoutX="35.0" layoutY="260.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Dans des prochaines releases, nous allons ajouter plusieurs autres services à cette application. Nous citons à titre d'exemple: réservation de cours dans la salle 'Sport Trace Gym', Achat de produits sportifs (Proteïnes, équipements, etc ...)" textAlignment="CENTER" wrappingWidth="800" />
            <Text fx:id="T3" layoutX="40.0" layoutY="360.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Vous pouvez toujours nous contacter par Messenger sur notre page Facebook 'Sport Trace Gym'." textAlignment="CENTER" wrappingWidth="800"/>
         </children>
      </Pane>
   </children>
</AnchorPane>
